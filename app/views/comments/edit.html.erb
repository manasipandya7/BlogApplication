<%= form_with(model: @comment, local: true) do |form| %>
<p>
  <%= form.label :commenter %><br>
  <%= form.text_field :commenter, :class => 'form-control' %>
</p>
<p>
  <%= form.label :body %><br>
  <%= form.text_area :body, :class => 'form-control' %>
</p>
<p>
  <%= form.submit "Comment", :class =>'btn btn-md btn-success' %>
</p>
<% end %>